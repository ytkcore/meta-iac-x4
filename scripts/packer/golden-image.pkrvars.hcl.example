# Golden Image Packer Variables
# Copy to golden-image.auto.pkrvars.hcl and customize

aws_region      = "ap-northeast-2"
ami_name_prefix = "meta-golden-image-al2023"
instance_type   = "t3.medium"
ssh_username    = "ec2-user"

# Optional: Specify VPC/Subnet for building
# Leave empty to use default VPC
vpc_id    = ""
subnet_id = ""

tags = {
  ManagedBy   = "packer"
  Project     = "meta"
  Environment = "dev"
}
